{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    // "baseUrl": "./types",
    "baseUrl": ".", // This must be specified if "paths" is specified.
    "paths": {
      // "polyscript/hooks": [
      //   "./node_modules/polyscript/esm/worker/hooks.js"
      // ]
    },
    "declaration": true,
    "declarationDir": "types",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "jsx": "preserve",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/ts/polyscript.d.ts",
    "./types/polyscript-hooks.d.ts",
    "./types/*.d.ts", // or the path to your declaration file
    "./src/**/*" // and your source files
  ]
}