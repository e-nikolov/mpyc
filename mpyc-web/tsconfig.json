{
  "compilerOptions": {
    "typeRoots": [
      "./types",
      "./node_modules/@types",
      "./node_modules/@pyscript/core/types"
    ],
    "types": [
      "./globals.d.ts"
    ],
    "allowJs": true,
    "checkJs": false,
    // "baseUrl": "./types",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "types",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable",
      "WebWorker"
    ],
    "jsx": "preserve",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    // "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "./types/*.d.ts", // or the path to your declaration file
    "./src/**/*" // and your source files
  ]
}